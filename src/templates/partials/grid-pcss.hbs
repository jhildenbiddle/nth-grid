{{#each grids}}
.{{@key}} {
    nth-grid {
        {{!-- Private globals --}}
        {{#if @root.defaults}}
        {{#unless props.width}}width: {{@root.defaults.width}};{{/unless}}
        {{#unless props.order}}order: {{@root.defaults.order}};{{/unless}}
        {{/if}}
        {{#each props}}
        {{@key}}: {{this}};
        {{/each}}
    }
    {{!-- Nested --}}
    {{#each grids}}
    .{{@key}} {
        nth-grid {
            {{!-- Private globals --}}
            {{#if @root.defaults}}
            {{#unless props.order}}order: {{@root.defaults.order}};{{/unless}}
            {{/if}}
            {{#each props}}
            {{@key}}: {{this}};
            {{/each}}
        }
    }
    {{/each}}
}
{{/each}}
