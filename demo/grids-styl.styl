@import "stylus/_nth-grid";

$nth-grid-direction = ltr;
$nth-grid-flex = true;
$nth-grid-flex-legacy = true;
$nth-grid-float = true;
$nth-grid-float-legacy = true;
$nth-grid-overlay = false;
$nth-grid-debug = false;
$nth-grid-warnings = false;
$nth-grid-remove-globals = true;

