{
  "name": "nth-grid",
  "version": "0.0.0",
  "author": "John Hildenbiddle",
  "description": "A versatile, lightweight and semantic CSS grid system for Less, Sass, Stylus and PostCSS",
  "license": "MIT",
  "homepage": "https://github.com/jhildenbiddle/nth-grid",
  "repository": {
    "type": "git",
    "url": "git://github.com/jhildenbiddle/nth-grid.git"
  },
  "bugs": {
    "url": "https://github.com/jhildenbiddle/nth-grid/issues"
  },
  "keywords": [
    "css",
    "flex",
    "flexbox",
    "gap",
    "grid",
    "gutter",
    "legacy",
    "less",
    "mixin",
    "plugin",
    "postcss",
    "postcss-plugin",
    "sass",
    "sassdoc",
    "scss",
    "semantic",
    "stylus"
  ],
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.24.7",
    "chai": "^4.1.2",
    "chai-diff": "^1.0.1",
    "compression": "^1.7.3",
    "cpx": "^1.5.0",
    "eslint": "^5.5.0",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-mocha": "^5.2.0",
    "handlebars": "^4.0.12",
    "less": "^3.8.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.merge": "^4.6.1",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "replace-in-file": "^3.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.2",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-terser": "^1.0.1",
    "sassdoc": "^2.1.19",
    "stylus": "^0.54.5"
  },
  "main": "dist/postcss/index.js",
  "scripts": {
    "build": "npm-run-all -p build:*-mixin build:*-plugin build:hbs -p build:*-grids build:sass-demo -p build:sassdoc",
    "build:hbs": "node ./handlebars.config.js",
    "build:less-grids": "lessc --include-path=dist build/demo/grids-less.less build/demo/grids-less.css",
    "build:less-mixin": "cpx './src/**/*.less' ./dist && replace-in-file ./dist/**/*.less --configFile ./replace.config.js",
    "build:less-plugin": "rollup -c rollup.less.config.js",
    "build:postcss-grids": "postcss build/demo/*.pcss ---dir build/demo --ext css",
    "build:postcss-plugin": "rollup -c rollup.postcss.config.js",
    "build:sass-demo": "node-sass --output-style expanded demo/src/sass -o build/demo --include-path dist",
    "build:sass-grids": "node-sass --output-style expanded build/demo -o build/demo --include-path dist",
    "build:sass-mixin": "cpx './src/**/*.scss' ./dist && replace-in-file ./dist/**/*.scss --configFile ./replace.config.js",
    "build:sassdoc": "sassdoc ./dist/sass -d ./docs/sassdoc -c ./sassdoc.config.json",
    "build:stylus-grids": "stylus build/demo -o build/demo --include dist",
    "build:stylus-mixin": "cpx './src/**/*.styl' ./dist && replace-in-file ./dist/**/*.styl --configFile ./replace.config.js",
    "clean": "rimraf build/* dist/* docs/sassdoc/*",
    "prepare": "run-s clean build",
    "serve": "node server.js",
    "start": "run-p watch serve",
    "test": "mocha tests",
    "version": "run-s test prepare && git add -A dist",
    "watch": "npm-run-all build -p watch:*-mixin watch:*-plugin watch:hbs watch:*-grids watch:sass-demo watch:sassdoc",
    "watch:hbs": "nodemon -w demo/src/templates -e hbs,js,json -x run-s build:hbs",
    "watch:less-grids": "nodemon -w build/demo -w dist/less -e js,less -x run-s build:less-grids",
    "watch:less-mixin": "nodemon -w src/less -e less -x run-s build:less-mixin",
    "watch:less-plugin": "nodemon -w src/less/plugin -w src/postcss -x run-s build:less-plugin",
    "watch:postcss-grids": "nodemon -w build/demo -e pcss -x run-s build:postcss-grids",
    "watch:postcss-plugin": "nodemon -w src/postcss -x run-s build:postcss-plugin build:postcss-grids",
    "watch:sass-demo": "nodemon -w demo/src/sass -w dist/sass -e scss -x run-s build:sass-demo",
    "watch:sass-grids": "nodemon -w build/demo -w dist/sass -e scss -x run-s build:sass-grids",
    "watch:sass-mixin": "nodemon -w src/sass -e scss -x run-s build:sass-mixin",
    "watch:sassdoc": "nodemon -w dist/sass -w sassdoc.config.json -e scss -x run-s build:sassdoc",
    "watch:stylus-grids": "nodemon -w build/demo -w dist/stylus -e styl -x run-s build:stylus-grids",
    "watch:stylus-mixin": "nodemon -w src/stylus -e styl -x run-s build:stylus-mixin"
  }
}
