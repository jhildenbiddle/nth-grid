{
  "name": "nth-grid",
  "version": "0.0.0",
  "author": "John Hildenbiddle",
  "description": "A versatile, lightweight and semantic CSS grid system for Less, Sass, Stylus and PostCSS",
  "license": "MIT",
  "homepage": "https://github.com/jhildenbiddle/nth-grid",
  "repository": {
    "type": "git",
    "url": "git://github.com/jhildenbiddle/nth-grid.git"
  },
  "bugs": {
    "url": "https://github.com/jhildenbiddle/nth-grid/issues"
  },
  "keywords": [
    "css",
    "flex",
    "flexbox",
    "gap",
    "grid",
    "gutter",
    "legacy",
    "less",
    "mixin",
    "plugin",
    "postcss",
    "postcss-plugin",
    "sass",
    "sassdoc",
    "scss",
    "semantic",
    "stylus"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "autoprefixer": "^9.4.7",
    "browser-sync": "^2.26.3",
    "chai": "^4.2.0",
    "chai-diff": "^1.0.1",
    "compression": "^1.7.3",
    "cpx": "^1.5.0",
    "dart-sass": "^1.25.0",
    "eslint": "^7.32.0",
    "eslint-plugin-chai-expect": "^2.0.1",
    "eslint-plugin-mocha": "^9.0.0",
    "handlebars": "^4.0.12",
    "less": "^4.1.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.merge": "^4.6.1",
    "mkdirp": "^1.0.4",
    "mocha": "^9.1.1",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "replace-in-file": "^6.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sassdoc": "^2.5.1",
    "stylus": "^0.55.0"
  },
  "main": "dist/postcss/index.js",
  "scripts": {
    "build": "npm-run-all -s clean build:dist -p build:demo build:fixtures build:sassdoc",
    "build:demo": "npm-run-all -s build:demo:hbs -p build:demo:less build:demo:postcss build:demo:sass build:demo:stylus",
    "build:demo:hbs": "node build/build-demo.js",
    "build:demo:less": "lessc --include-path=dist demo/grids-less.less demo/grids-less.css",
    "build:demo:postcss": "postcss demo/*.pcss ---dir demo --ext css",
    "build:demo:sass": "dart-sass demo:demo src/demo/sass:demo --load-path=dist --no-source-map",
    "build:demo:stylus": "stylus demo -o demo --include dist",
    "build:dist": "rimraf dist/* docs/sassdoc/* && npm-run-all -p build:dist:less build:dist:postcss build:dist:sass build:dist:stylus",
    "build:dist:less": "run-p build:dist:less:*",
    "build:dist:less:mixin": "cpx './src/less/*.less' ./dist/less && replace-in-file ./dist/**/*.less --configFile ./replace.config.js",
    "build:dist:less:plugin": "rollup -c rollup.less.config.js",
    "build:dist:postcss": "rollup -c rollup.postcss.config.js",
    "build:dist:sass": "cpx './src/sass/*.scss' ./dist/sass && replace-in-file ./dist/**/*.scss --configFile ./replace.config.js",
    "build:dist:stylus": "cpx './src/stylus/*.styl' ./dist/stylus && replace-in-file ./dist/**/*.styl --configFile ./replace.config.js",
    "build:fixtures": "rimraf tests/fixtures/* && node build/build-fixtures.js",
    "build:sassdoc": "sassdoc ./dist/sass -d ./docs/sassdoc -c ./sassdoc.config.json",
    "clean": "rimraf demo/* dist/* docs/sassdoc/* tests/fixtures/*",
    "prepare": "run-s build",
    "serve": "nodemon -q server.js",
    "start": "run-s build watch serve",
    "test": "mocha tests",
    "version": "run-s prepare test && git add -A dist",
    "watch": "run-p watch:demo:* watch:dist:* watch:sassdoc",
    "watch:demo:less": "nodemon -C -q -w demo -e less -x run-s build:demo:less",
    "watch:demo:postcss": "nodemon -C -q -w demo -e pcss -x run-s build:demo:postcss",
    "watch:demo:sass": "nodemon -C -q -w demo -e scss -x run-s build:demo:sass",
    "watch:demo:stylus": "nodemon -C -q -w demo -e styl -x run-s build:demo:stylus",
    "watch:dist:hbs": "nodemon -C -q -w src/templates -x run-p build:demo build:fixtures",
    "watch:dist:less": "nodemon -C -q -w src/less -x run-s build:dist:less",
    "watch:dist:postcss": "nodemon -C -q -w src/postcss -x run-s build:dist:postcss build:dist:less",
    "watch:dist:sass": "nodemon -C -q -w src/sass -x run-s build:dist:sass",
    "watch:dist:stylus": "nodemon -C -q -w src/stylus -x run-s build:dist:stylus",
    "watch:sassdoc": "nodemon -C -q -w src/sass -x run-s build:sassdoc"
  }
}
