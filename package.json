{
  "name": "nth-grid",
  "version": "0.0.0",
  "author": "John Hildenbiddle",
  "description": "A versatile, lightweight and semantic CSS grid system for Less, Sass, Stylus and PostCSS",
  "license": "MIT",
  "homepage": "https://github.com/jhildenbiddle/nth-grid",
  "repository": {
    "type": "git",
    "url": "git://github.com/jhildenbiddle/nth-grid.git"
  },
  "bugs": {
    "url": "https://github.com/jhildenbiddle/nth-grid/issues"
  },
  "keywords": [
    "css",
    "flex",
    "flexbox",
    "gap",
    "grid",
    "gutter",
    "legacy",
    "less",
    "mixin",
    "plugin",
    "postcss",
    "postcss-plugin",
    "sass",
    "sassdoc",
    "scss",
    "semantic",
    "stylus"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "autoprefixer": "^10.3.4",
    "browser-sync": "^2.26.3",
    "compression": "^1.7.3",
    "cpx": "^1.5.0",
    "dart-sass": "^1.25.0",
    "dedent": "^0.7.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.0",
    "handlebars": "^4.0.12",
    "jest": "^27.2.0",
    "less": "^4.1.1",
    "lodash.camelcase": "^4.3.0",
    "lodash.merge": "^4.6.1",
    "mkdirp": "^1.0.4",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "replace-in-file": "^6.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.41.0",
    "sassdoc": "^2.5.1",
    "stylus": "^0.55.0"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "main": "dist/postcss/index.js",
  "scripts": {
    "build": "npm-run-all -s build:dist -p build:demo build:fixtures build:sassdoc",
    "build:demo": "npm-run-all -s build:demo:hbs -p build:demo:less build:demo:postcss build:demo:sass build:demo:stylus",
    "build:demo:hbs": "node build/build-demo.js",
    "build:demo:less": "lessc --include-path=dist demo/grids-less.less demo/grids-less.css",
    "build:demo:postcss": "postcss demo/*.pcss ---dir demo --ext css",
    "build:demo:sass": "run-p build:demo:sass-*",
    "build:demo:sass-styles": "sass src/demo/sass:demo --load-path=dist --no-source-map",
    "build:demo:sass-import": "dart-sass demo/grids-sass-import.scss demo/grids-sass-import.css --load-path=dist --no-source-map",
    "build:demo:sass-use": "sass demo/grids-sass-use.scss demo/grids-sass-use.css --load-path=dist --no-source-map",
    "build:demo:stylus": "stylus demo -o demo --include dist",
    "build:dist": "rimraf dist/* docs/sassdoc/* && npm-run-all -p build:dist:less build:dist:postcss build:dist:sass build:dist:stylus",
    "build:dist:less": "run-p build:dist:less:*",
    "build:dist:less:mixin": "cpx './src/less/*.less' ./dist/less && replace-in-file ./dist/**/*.less --configFile ./replace.config.js --quiet",
    "build:dist:less:plugin": "rollup -c rollup.less.config.js",
    "build:dist:postcss": "rollup -c rollup.postcss.config.js",
    "build:dist:sass": "cpx './src/sass/*.scss' ./dist/sass && replace-in-file ./dist/**/*.scss --configFile ./replace.config.js --quiet",
    "build:dist:stylus": "cpx './src/stylus/*.styl' ./dist/stylus && replace-in-file ./dist/**/*.styl --configFile ./replace.config.js --quiet",
    "build:fixtures": "rimraf tests/fixtures/* && node build/build-fixtures.js",
    "build:sassdoc": "sassdoc ./dist/sass -d ./docs/sassdoc -c ./sassdoc.config.json",
    "clean": "rimraf demo/* dist/* docs/sassdoc/* tests/fixtures/*",
    "prepare": "run-s clean build",
    "serve": "nodemon -q server.js",
    "start": "npm-run-all -s build -p watch serve",
    "test": "jest",
    "version": "run-s prepare test && git add -A dist",
    "watch": "run-p watch:demo:* watch:dist:* watch:sassdoc",
    "watch:demo:hbs": "nodemon -C -q -w src/templates -e '*' -x run-p build:demo build:fixtures",
    "watch:demo:less": "nodemon -C -q -w demo -e less -x run-s build:demo:less",
    "watch:demo:postcss": "nodemon -C -q -w demo -e pcss -x run-s build:demo:postcss",
    "watch:demo:sass": "nodemon -C -q -w src/demo -w demo -e scss -x run-s build:demo:sass",
    "watch:demo:stylus": "nodemon -C -q -w demo -e styl -x run-s build:demo:stylus",
    "watch:dist:less": "nodemon -C -q -w src/less -e '*' -x run-s build:dist:less",
    "watch:dist:postcss": "nodemon -C -q -w src/postcss -e '*' -x run-s build:dist:postcss build:dist:less",
    "watch:dist:sass": "nodemon -C -q -w src/sass -e '*' -x run-s build:dist:sass",
    "watch:dist:stylus": "nodemon -C -q -w src/stylus -e '*' -x run-s build:dist:stylus",
    "watch:sassdoc": "nodemon -C -q -w src/sass -e '*' -x run-s build:sassdoc"
  }
}
