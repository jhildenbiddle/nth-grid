{{#each grids}}
.{{@key}} {
    @include nth-grid(
        {{!-- Private globals --}}
        {{#if @root.defaults}}
        {{#unless props.width}}$width: {{@root.defaults.width}},{{/unless}}
        {{#unless props.order}}$order: {{@root.defaults.order}},{{/unless}}
        {{/if}}
        {{#each props}}
        ${{@key}}: {{this}}{{#unless @last}},{{/unless}}
        {{/each}}
    );
    {{!-- Nested --}}
    {{#each grids}}
    .{{@key}} {
        @include nth-grid(
            {{!-- Private globals --}}
            {{#if @root.defaults}}
            {{#unless props.order}}$order: {{@root.defaults.order}},{{/unless}}
            {{/if}}
            {{#each props}}
            ${{@key}}: {{this}}{{#unless @last}},{{/unless}}
            {{/each}}
        );
    }
    {{/each}}
}
{{/each}}
